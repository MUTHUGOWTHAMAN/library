<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper" class="container py-5">

		<!-- 🔥 Header Section -->
		<div class="bg-gradient-primary text-white rounded shadow-lg p-4 mb-5 text-center">
			<h2 class="m-0 fw-bold">👩‍🎓 Student List</h2>
		</div>

		<!-- 🔥 Student Table -->
		<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
			<div class="card-header bg-dark text-white p-4">
				<h4 class="m-0"><i class="fas fa-users"></i> Students</h4>
			</div>

			<div class="card-body p-0">
				<table class="table table-striped table-hover m-0">
					<thead class="bg-light text-dark">
						<tr>
							<th scope="col" class="text-center">#</th>
							<th scope="col"><i class="fas fa-user"></i> Name</th>
							<th scope="col"><i class="fas fa-envelope"></i> Email</th>
							<th scope="col"><i class="fas fa-calendar-alt"></i> Joined Time</th>
						</tr>
					</thead>
					<tbody>
						<% for(let i = 0; i < students.length; i++) { %>
							<tr class="align-middle">
								<th scope="row" class="text-center text-primary"> 
									<span class="badge bg-primary fs-6"><%= i + 1 %></span>
								</th>
								<td>
									<i class="fas fa-user-circle text-success me-2"></i>
									<%= students[i].firstName + " " + students[i].lastName %> 
								</td>
								<td>
									<i class="fas fa-envelope-open-text text-info me-2"></i>
									<%= students[i].email %> 
								</td>
								<td>
									<i class="fas fa-clock text-warning me-2"></i>
									<%= students[i].joinedTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short" }) %>
								</td>
							</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>

	</div>
</main>
