<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper" class="container py-5">

		<!-- ðŸ”¥ Header Section -->
		<div class="d-flex justify-content-between align-items-center bg-gradient-success text-white rounded shadow-lg p-4 mb-5">
			<h2 class="m-0"><i class="fas fa-undo me-2"></i> Books Returned</h2>
		</div>

		<!-- ðŸ”¥ Table Container -->
		<div class="table-responsive rounded shadow-lg p-4 bg-white">

			<table class="table table-hover align-middle">
				<thead class="bg-success text-white">
					<tr>
						<th>#</th>
						<th><i class="fas fa-user me-1"></i> Student</th>
						<th><i class="fas fa-book me-1"></i> Book Title</th>
						<th><i class="fas fa-barcode me-1"></i> ISBN</th>
						<th><i class="fas fa-calendar-alt me-1"></i> Issued Time</th>
						<th><i class="fas fa-calendar-check me-1"></i> Returned Time</th>
						<th><i class="fas fa-info-circle me-1"></i> Status</th>
					</tr>
				</thead>

				<tbody>

					<% for(let i=0; i<previousLoans.length; i++) { %>
						<tr class="table-light">
							<td class="fw-bold"><%= i + 1 %></td>
							<td class="text-primary fw-bold"><%= previousLoans[i].user.email %></td>
							<td><%= previousLoans[i].book.title %></td>
							<td class="text-muted"><%= previousLoans[i].book.ISBN %></td>
							<td><%= previousLoans[i].issueTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></td>
							<td><%= previousLoans[i].returnTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></td>

							<!-- Status Badge -->
							<td>
								<span class="badge bg-success">
									<%= previousLoans[i].status %>
								</span>
							</td>
						</tr>
					<% } %>

				</tbody>
			</table>

		</div>

	</div>
</main>
