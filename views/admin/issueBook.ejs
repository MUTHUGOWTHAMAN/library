<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper" class="container py-5">

		<!-- ðŸ”¥ Header -->
		<div class="d-flex justify-content-between align-items-center bg-gradient-primary text-white rounded shadow-lg p-4 mb-5">
			<h2 class="m-0"><i class="fas fa-book-reader me-2"></i> Issue Book</h2>
		</div>

		<!-- ðŸ”¥ Form Container -->
		<div class="card shadow-lg border-0 rounded-4 mx-auto p-5" style="max-width: 600px;">

			<form action="/admin/issue" method="POST" class="">

				<!-- Student Email -->
				<div class="mb-4">
					<label for="email" class="form-label fw-bold text-primary"><i class="fas fa-envelope me-2"></i> Student Email</label>
					<input type="email" name="email" class="form-control form-control-lg rounded-3 shadow-sm" id="email" placeholder="Enter student email..." required>
				</div>

				<!-- Book ISBN -->
				<div class="mb-4">
					<label for="ISBN" class="form-label fw-bold text-primary"><i class="fas fa-barcode me-2"></i> Book ISBN</label>
					<input type="number" name="ISBN" class="form-control form-control-lg rounded-3 shadow-sm" id="ISBN" placeholder="Enter book ISBN..." required>
				</div>

				<!-- Submit Button -->
				<div class="d-grid">
					<button type="submit" class="btn btn-success btn-lg rounded-3 shadow-sm">
						<i class="fas fa-check-circle me-2"></i> Issue Book
					</button>
				</div>

			</form>
		</div>

	</div>
</main>
	