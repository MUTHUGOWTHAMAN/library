<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper" class="container py-5">

		<!-- ðŸ”¥ Profile Card -->
		<div class="card shadow-lg border-0 rounded-4 overflow-hidden mx-auto" style="max-width: 800px;">

			<!-- ðŸ”¥ Header -->
			<div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center py-4 px-5">
				<h3 class="mb-0"><i class="fas fa-user-cog me-2"></i> Admin Profile</h3>
				<a href="/admin/dashboard" class="btn btn-light btn-sm">
					<i class="fas fa-arrow-left me-1"></i> Back
				</a>
			</div>

			<!-- ðŸ”¥ Form Body -->
			<div class="card-body p-5 bg-light">

				<form action="/admin/profile?_method=PUT" method="POST" class="needs-validation" novalidate>
					
					<div class="row g-4">
						<!-- First Name -->
						<div class="col-md-6">
							<label for="first-name" class="form-label fw-bold">First Name</label>
							<input type="text" name="admin[firstName]" class="form-control rounded-3" id="first-name" placeholder="Enter first name..." 
							value="<%= currentUser.firstName %>" required>
						</div>

						<!-- Last Name -->
						<div class="col-md-6">
							<label for="last-name" class="form-label fw-bold">Last Name</label>
							<input type="text" name="admin[lastName]" class="form-control rounded-3" id="last-name" placeholder="Enter last name..." 
							value="<%= currentUser.lastName %>" required>
						</div>
					</div>

					<!-- Email (Disabled) -->
					<div class="my-4">
						<label for="email" class="form-label fw-bold">Email</label>
						<input type="email" id="email" class="form-control rounded-3 bg-white" 
						value="<%= currentUser.email %>" disabled>
					</div>

					<!-- Gender -->
					<div class="my-4">
						<span class="fw-bold d-block mb-2">Gender:</span>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="admin[gender]" id="male" value="male" 
							<% if(currentUser.gender=='male'){%> checked <%}%> >
							<label class="form-check-label" for="male">Male</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="admin[gender]" id="female" value="female" 
							<% if(currentUser.gender=='female'){%> checked <%}%> >
							<label class="form-check-label" for="female">Female</label>
						</div>
					</div>

					<!-- Address -->
					<div class="my-4">
						<label for="address" class="form-label fw-bold">Address</label>
						<input type="text" name="admin[address]" class="form-control rounded-3" id="address" placeholder="Enter address..." 
						value="<%= currentUser.address %>">
					</div>

					<!-- Phone -->
					<div class="my-4">
						<label for="phone" class="form-label fw-bold">Phone</label>
						<input type="number" name="admin[phone]" class="form-control rounded-3" id="phone" placeholder="Enter phone..." 
						value="<%= currentUser.phone %>">
					</div>

					<!-- Submit Button -->
					<div class="text-center">
						<button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 shadow-sm mt-4">
							<i class="fas fa-save me-2"></i> Update Profile
						</button>
					</div>

				</form>

			</div>
		</div>

	</div>
</main>
	