<main>
    <%- include('../partials/studentSidebar') %>

    <div id="main-wrapper" style="background: #f4f4f4; min-height: 100vh; padding: 40px;">

        <form action="/student/profile?_method=PUT" method="POST" 
              class="border m-auto my-5 bg-white rounded shadow-sm" 
              style="max-width: 900px; padding: 40px;">

            <!-- Form Title -->
            <h5 class="text-center text-white py-3 rounded-top" 
                style="background: linear-gradient(135deg, #007bff, #0056b3); 
                       font-size: 22px; 
                       letter-spacing: 1px;">
                üõ†Ô∏è Edit Profile
            </h5>

            <div class="form-body p-4">
                
                <!-- First Name -->
                <div class="mb-4">
                    <label for="first-name" class="form-label fw-bold" style="color: #333;">First Name</label>
                    <input type="text" name="student[firstName]" class="form-control rounded-1" 
                           id="first-name" placeholder="Enter first name.." 
                           value="<%= currentUser.firstName %>" required
                           style="border: 1px solid #ccc; transition: 0.3s;">
                </div>

                <!-- Last Name -->
                <div class="mb-4">
                    <label for="last-name" class="form-label fw-bold" style="color: #333;">Last Name</label>
                    <input type="text" name="student[lastName]" class="form-control rounded-1" 
                           id="last-name" placeholder="Enter last name.." 
                           value="<%= currentUser.lastName %>" required
                           style="border: 1px solid #ccc; transition: 0.3s;">
                </div>

                <!-- Email -->
                <div class="mb-4">
                    <label for="email" class="form-label fw-bold" style="color: #333;">Email</label>
                    <input type="email" id="email" class="form-control rounded-1 bg-light" 
                           value="<%= currentUser.email %>" disabled 
                           style="border: 1px solid #ccc; color: #555;">
                </div>

                <!-- Gender -->
                <div class="mb-4">
                    <label class="form-label fw-bold" style="color: #333;">Gender</label>
                    <div class="d-flex align-items-center">
                        <div class="form-check me-4">
                            <input class="form-check-input" type="radio" name="student[gender]" id="male" 
                                   value="male" <% if(currentUser.gender=='male'){%> checked <%}%> >
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="student[gender]" id="female" 
                                   value="female" <% if(currentUser.gender=='female'){%> checked <%}%> >
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>
                </div>

                <!-- Address -->
                <div class="mb-4">
                    <label for="address" class="form-label fw-bold" style="color: #333;">Address</label>
                    <input type="text" name="student[address]" class="form-control rounded-1" 
                           id="address" placeholder="Enter address.." 
                           value="<%= currentUser.address %>" 
                           style="border: 1px solid #ccc; transition: 0.3s;">
                </div>

                <!-- Phone -->
                <div class="mb-4">
                    <label for="phone" class="form-label fw-bold" style="color: #333;">Phone</label>
                    <input type="number" name="student[phone]" class="form-control rounded-1" 
                           id="phone" placeholder="Enter phone.." 
                           value="<%= currentUser.phone %>" 
                           style="border: 1px solid #ccc; transition: 0.3s;">
                </div>

                <!-- Submit Button -->
                <button type="submit" 
                        class="btn w-100 mt-4 py-3 rounded-pill fw-bold text-white shadow-lg"
                        style="background: linear-gradient(135deg, #28a745, #218838); 
                               font-size: 20px; 
                               letter-spacing: 1px; 
                               transition: 0.3s; 
                               border: none; 
                               box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3); 
                               cursor: pointer;">
                    üöÄ <strong>Update Profile</strong>
                </button>

            </div>
        </form>

    </div>
</main>
